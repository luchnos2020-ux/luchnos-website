#!/bin/sh
# Pre-commit hook: Validate UTF-8 encoding
# Install: git config core.hooksPath .githooks

echo "üîç Checking UTF-8 encoding..."

# Check if Node.js is available
if command -v node >/dev/null 2>&1; then
  node scripts/validate-encoding.js
  if [ $? -ne 0 ]; then
    echo ""
    echo "‚ùå Commit blocked: Fix encoding issues before committing."
    echo ""
    exit 1
  fi
else
  echo "‚ö†Ô∏è  Node.js not found - skipping encoding validation"
fi

exit 0
